.profile-card {
  height: 240rpx;
  border-radius: 10rpx;
  background: linear-gradient(rgba(0, 119, 255, 0.2), rgba(0, 119, 255, 0.05));
  display: flex;
  align-items: center;
  padding: 0 30rpx;  
}

.my-settings {
  margin-top: 30rpx;
  background-color: white;
}

.cell-icon {
  margin-right: 5px;
  width: 20px;
  height: 20px;
}

.weui-cell__hd {
  display: flex;
  align-items: center;
}
/* open-data的头像添加样式 */
.avatar {
  overflow: hidden;
  display: block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.info{
  margin-left: 30rpx;
}
.auth-btn{
  background-color: transparent;
}
/* 去掉button的边框 */
.auth-btn::after{
  border: none;
}